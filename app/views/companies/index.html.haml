- content_for(:section_header) do
  .section_header{:class => 'companies'}
    %h1= semantic_pluralize(@companies.respond_to?(:total_entries) ? @companies.total_entries : @companies.size, "#{@tag} société".strip.titleize)
    = link_to "+ Ajouter une société", new_company_path, :class => 'new'
    #view_options
      %span.sorting
        %strong Trier par:
        = sort_link(:name, :label => "Nom") + ","
        = sort_link(:created_at, :label => "Date d'ajout", :default_order => :desc, :is_default => :desc) + ","
        = sort_link(:random, :label => "Aléatoire")

= render :partial => 'companies/list', :object => @companies
