.sign_in_form
  = semantic_form_for((@signin_data || SignInData.new), :url => user_sessions_path) do |f|
    = f.input :email, :label => "Adresse email", :input_html => {:size => nil, :autocorrect => "off", :autocapitalize => "off"}
    = f.input :provider, :collection => Authentication::PROVIDER_OPTIONS, :include_blank => false
    = f.commit_button "Se connecter!"
    - if display_sign_in_as_sample?
      %p.development_only
        DEV:
        = link_to "Se connecter comme utilisateur d'essai", authentications_path(:username => "sample"), :method => :post
